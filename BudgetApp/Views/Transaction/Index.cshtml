@model TransactionViewModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div id="indexPage">
    <h2>Transaction History</h2>

    <p>
        <a buton class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#createModal">Create New</a>
    </p>

    <form asp-controller="Transaction" asp-action="Index" method="get">
        <p>
            <select asp-for="TransactionCategory" asp-items="Model.TransactionCategories">
                <option value="">All Categories</option>
            </select>

            <label>Transaction: <input type="text" asp-for="SearchString"/></label>
            <input type="submit" value="Filter"/>
        </p>
    </form>

    <table class="table table-striped table-dark table-hover">
        <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Transactions[0].Date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Transactions[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Transactions[0].Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Transactions[0].Category.Type)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Transactions[0].Amount)
            </th>
            <th>
                Actions
            </th>
        </tr>
        </thead>
        <tbody>
        @foreach (var transaction in Model.Transactions)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => transaction.Date)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => transaction.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => transaction.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => transaction.Category.Type)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => transaction.Amount)
                </td>
                <td>
                    <button class="btn btn-info" data-toggle="edit-modal" data-bs-target="#editModal"
                            data-url="@Url.Action("Edit", "Transaction", new { id = transaction.Id })">Edit
                    </button>
                    <button class="btn btn-success" data-toggle="detail-modal" data-bs-target="#detailModal"
                            data-url="@Url.Action("Details", "Transaction", new { id = transaction.Id })">Details
                    </button>
                    <button class="btn btn-danger" data-toggle="delete-modal" data-bs-target="#deleteModal"
                            data-url="@Url.Action("Delete", "Transaction", new { id = transaction.Id })">Delete
                    </button>
                </td>
            </tr>
        }
        </tbody>
    </table>
</div>

<div id="detailModalPlaceholder"></div>
<div id="editModalPlaceholder"></div>
<div id="deleteModalPlaceholder"></div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}