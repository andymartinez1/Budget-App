@model BudgetApp.Models.ViewModels.TransactionCategoryViewModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var filterCategory = Model?.FilterCategory ?? "";
    var searchString = Model?.SearchName ?? "";
    var current = ViewBag.CurrentPage as int? ?? 1;
    var total = ViewBag.TotalPages as int? ?? 1;
    var prevDisabled = current <= 1 ? "disabled" : "";
    var nextDisabled = current >= total ? "disabled" : "";
    var prevPage = Math.Max(1, current - 1);
    var nextPage = Math.Min(total, current + 1);

    string UrlFor(int page)
    {
        return Url.Action("Index", "Transaction", new { filterCategory, searchString, pageNumber = page });
    }

    var prevUrl = UrlFor(prevPage);
    var nextUrl = UrlFor(nextPage);
}

<div id="indexPage">
    <h1>Transaction History</h1>

    <p>
        <button type="button" class="btn btn-primary" data-toggle="create-transaction-modal"
                data-bs-target="#createTransactionModal"
                data-url="@Url.Action("Create", "Transaction")">Add Transaction
        </button>
    </p>

    <form asp-controller="Transaction" asp-action="Index" method="get">
        <div>
            <select asp-for="FilterCategory" asp-items="Model.CategoriesSelectList">
                <option value="">All Categories</option>
            </select>
            <input type="submit" value="Filter"/>
        </div>
    </form>
    <br/>

    <table class="table table-hover table-striped">
        <thead class="text-center">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Transactions.FirstOrDefault().Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Transactions.FirstOrDefault().Amount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Transactions.FirstOrDefault().Category)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Transactions.FirstOrDefault().Date)
            </th>
            <th style="width: 15%">
                Actions
            </th>
        </tr>
        </thead>
        <tbody class="text-center">
        @foreach (var transaction in Model.Transactions)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => transaction.Name)
                </td>
                <td class="@(transaction.Amount > 0 ? "text-success" : "text-danger")">
                    @Html.DisplayFor(modelItem => transaction.Amount)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => transaction.Category.Type)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => transaction.Date)
                </td>
                <td>
                    <button class="btn btn-info" data-toggle="edit-transaction-modal" data-bs-target="#editTransactionModal"
                            data-url="@Url.Action("Edit", "Transaction", new { id = transaction.TransactionId })"><i
                            class="bi bi-pencil-square"></i>
                    </button>
                    <button class="btn btn-success" data-toggle="transaction-detail-modal" data-bs-target="#detailModal"
                            data-url="@Url.Action("Details", "Transaction", new { id = transaction.TransactionId })"><i
                            class="bi bi-info-circle"></i>
                    </button>
                    <button class="btn btn-danger" data-toggle="delete-transaction-modal" data-bs-target="#deleteModal"
                            data-url="@Url.Action("Delete", "Transaction", new { id = transaction.TransactionId })"><i
                            class="bi bi-trash"></i>
                    </button>
                </td>
            </tr>
        }
        </tbody>
    </table>

    @if (total > 1)
    {
        <nav class="d-flex justify-content-center align-items-center" aria-label="Transactions pagination">
            <ul class="pagination">
                <li class="page-item @prevDisabled">
                    <a class="page-link" href="@prevUrl">Previous</a>
                </li>

                @for (var i = 1; i <= total; i++)
                {
                    var pageUrl = UrlFor(i);
                    var active = i == current ? "active" : "";
                    <li class="page-item @active">
                        <a class="page-link" href="@pageUrl">@i</a>
                    </li>
                }

                <li class="page-item @nextDisabled">
                    <a class="page-link" href="@nextUrl">Next</a>
                </li>
            </ul>
        </nav>
    }
</div>

<div id="createTransactionModalPlaceholder"></div>
<div id="detailTransactionModalPlaceholder"></div>
<div id="editTransactionModalPlaceholder"></div>
<div id="deleteTransactionModalPlaceholder"></div>

@section Scripts {

    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}