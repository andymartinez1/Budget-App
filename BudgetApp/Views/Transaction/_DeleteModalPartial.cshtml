@model BudgetApp.Models.ViewModels.TransactionViewModel

<div class="modal fade" tabindex="-1" role="dialog" id="deleteModal" aria-labelledby="deleteModalLabel"
     aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h2 class="modal-title" id="deleteModalLabel">Delete Transaction</h2>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p>Are you sure you want to delete this transaction?</p>
                <dl>
                    <dt>
                        @Html.DisplayNameFor(t => t.Name)
                    </dt>
                    <dd>
                        @Html.DisplayFor(t => t.Name)
                    </dd>
                    <dt>
                        @Html.DisplayNameFor(t => t.Category)
                    </dt>
                    <dd>
                        @Html.DisplayFor(t => t.Category)
                    </dd>
                    <dt>
                        @Html.DisplayNameFor(t => t.Amount)
                    </dt>
                    <dd>
                        @Html.DisplayFor(t => t.Amount)
                    </dd>
                    <dt>
                        @Html.DisplayNameFor(t => t.Date)
                    </dt>
                    <dd>
                        @Html.DisplayFor(t => t.Date)
                    </dd>
                </dl>
            </div>
            <div class="modal-footer">
                <form asp-action="Delete" method="post">
                    <input type="hidden" asp-for="Id"/>
                    <button type="submit" class="btn btn-danger">Delete</button>
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                </form>
            </div>
        </div>
    </div>
</div>