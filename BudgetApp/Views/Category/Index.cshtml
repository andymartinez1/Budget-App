@model BudgetApp.Models.ViewModels.TransactionCategoryViewModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";

    //Pagination
    var current = ViewBag.CurrentPage as int? ?? 1;
    var total = ViewBag.TotalPages as int? ?? 1;
    var prevDisabled = current <= 1 ? "disabled" : "";
    var nextDisabled = current >= total ? "disabled" : "";
    var prevPage = Math.Max(1, current - 1);
    var nextPage = Math.Min(total, current + 1);

    string UrlFor(int page)
    {
        return Url.Action("Index", "Category", new { pageNumber = page });
    }

    var prevUrl = UrlFor(prevPage);
    var nextUrl = UrlFor(nextPage);
}

<div id="indexPage">
    <h1>Categories</h1>

    <p>
        <button type="button" class="btn btn-primary" data-toggle="create-category-modal"
                data-bs-target="#createCategoryModal" data-url="@Url.Action("Create", "Category")">Add Category
        </button>
    </p>


    <table class="table table-hover table-striped table-bordered rounded-3 overflow-hidden">
        <thead class="text-center">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Categories)
            </th>
            <th>
                Actions
            </th>
        </tr>
        </thead>
        <tbody class="text-center">
        @foreach (var category in Model.Categories)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => category.Type)
                </td>
                <td>
                    <button class="btn btn-info" data-toggle="edit-category-modal" data-bs-target="#editModal"
                            data-url="@Url.Action("Edit", "Category", new { id = category.CategoryId })"><i
                            class="bi bi-pencil-square"></i>
                    </button>
                    <button class="btn btn-danger" data-toggle="delete-category-modal" data-bs-target="#deleteModal"
                            data-url="@Url.Action("Delete", "Category", new { id = category.CategoryId })"><i
                            class="bi bi-trash"></i>
                    </button>
                </td>
            </tr>
        }
        </tbody>
    </table>

    @if (total > 1)
    {
        <nav class="d-flex justify-content-center align-items-center" aria-label="Transactions pagination">
            <ul class="pagination">
                <li class="page-item @prevDisabled">
                    <a class="page-link" href="@prevUrl">Previous</a>
                </li>

                @for (var i = 1; i <= total; i++)
                {
                    var pageUrl = UrlFor(i);
                    var active = i == current ? "active" : "";
                    <li class="page-item @active">
                        <a class="page-link" href="@pageUrl">@i</a>
                    </li>
                }

                <li class="page-item @nextDisabled">
                    <a class="page-link" href="@nextUrl">Next</a>
                </li>
            </ul>
        </nav>
    }
</div>

<div id="createCategoryModalPlaceholder"></div>
<div id="editCategoryModalPlaceholder"></div>
<div id="deleteCategoryModalPlaceholder"></div>

@section Scripts {

    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}