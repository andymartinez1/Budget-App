@model TransactionViewModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Categories</h1>

<p>
    <a buton class="btn btn-primary" asp-action="Create">Create New</a>
</p>

<form asp-controller="Category" asp-action="Index" method="get">
    <p>
        <label>Transaction: <input type="text" asp-for="SearchString"/></label>
        <input type="submit" value="Filter"/>
    </p>
</form>

<table class="table table-striped table-dark table-hover">
    <thead>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Categories[0].Type)
        </th>
        <th>
            Actions
        </th>
    </tr>
    </thead>
    <tbody>
    @foreach (var category in Model.Categories)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => category.Type)
            </td>
            <td>
                <a class="btn btn-info" asp-action="Edit" asp-route-id="@category.Id">Edit</a>
                <a class="btn btn-success" asp-action="Details" asp-route-id="@category.Id">Details</a>
                <a class="btn btn-danger" asp-action="Delete" asp-route-id="@category.Id">Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>
