@model BudgetApp.Models.ViewModels.TransactionCategoryViewModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Categories</h1>

<p>
    <a buton class="btn btn-primary" asp-action="Create">Create New</a>
</p>

<form asp-controller="Category" asp-action="Index" method="get">
    <p>
        <label>Transaction: <input type="text" asp-for="SearchName"/></label>
        <input type="submit" value="Filter"/>
    </p>
</form>

<table class="table table-hover table-striped">
    <thead class="text-center">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Categories)
        </th>
        <th>
            Actions
        </th>
    </tr>
    </thead>
    <tbody class="text-center">
    @foreach (var category in Model.Categories)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => category.Text)
            </td>
            <td>
                <button class="btn btn-info" data-toggle="edit-modal" data-bs-target="#editModal"
                        data-url="@Url.Action("Edit", "Category")"><i
                        class="bi bi-pencil-square"></i>
                </button>
                <button class="btn btn-success" data-toggle="detail-modal" data-bs-target="#detailModal"
                        data-url="@Url.Action("Details", "Category")"><i
                        class="bi bi-info-circle"></i>
                </button>
                <button class="btn btn-danger" data-toggle="delete-modal" data-bs-target="#deleteModal"
                        data-url="@Url.Action("Delete", "Category")"><i
                        class="bi bi-trash"></i>
                </button>
            </td>
        </tr>
    }
    </tbody>
</table>
